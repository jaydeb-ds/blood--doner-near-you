<body>
  <header class="header">
    <div class="container">
        <h1 class="logo">Blood<span>Donor</span></h1>
        <nav class="nav">
            <a href="/#home">Home</a>
            <a href="/#about">About</a>
            <a href="/#contact">Donate</a>
            <a href="/view_doner">Doner</a>
        </nav>
    </div>
</header>
  <h2>Find doner</h2>
  <div class="form">
    <form action="/view_doner" method="get">

      <div class="inputs_container">
        <div class="inputs">
          <p>District </p>
          <select name="districtName" aria-placeholder="district" id="2">
            <option>--select district--</option>
            <option value="Sepahijala">Sepahijala</option>
            <option value="Unakoti">Unakoti</option>
            <option value="Dhalai">Dhalai</option>
            <option value="Khowai">Khowai</option>
            <option value="North Tripura">North Tripura</option>
            <option value="South Tripura">South Tripura</option>
            <option value="West Tripura">West Tripura</option>
          </select>
        </div>

        <div class="inputs">
          <p>Blood Group </p>
          <select name="blood_group" aria-placeholder="blood_group" id="1">
            <option>--select blood group--</option>
            <option value="A+">A+</option>
            <option value="B+">B+</option>
            <option value="AB+">AB+</option>
            <option value="O+">O+</option>
            <option value="A-">A-</option>
            <option value="B-">B-</option>
            <option value="AB-">AB-</option>
            <option value="O-">O-</option>
            <option value="all">All</option>
          </select>
        </div>
      
        <!-- <input type="text" name="blood_group" placeholder="blood group"> -->
        <button class="inputs" type="submit">Search</button>
        <!-- <a href="/">go to add data</a> -->
      </div>

    </form>


  </div>

  <div class="div-container">
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>age</th>
            <th>blood group</th>
            <th>Phone Number</th>
            <!-- <th>district</th> -->
            <th> Address </th>
          </tr>
        </thead>
        <tbody>

          <%if(datafind.length> 0) { %>
            <% datafind.forEach(function(datafind){%>
              <tr>
                <td>
                  <%= datafind.name %>
                </td>
                <td>
                  <%= datafind.age %>
                </td>
                <td>
                  <%= datafind.blood %>
                </td>
                <td>
                  <%= datafind.phone %>
                </td>
                <!-- <td>
              <%= datafind.district %>
            </td> -->
                <td>
                  <%= datafind.address %>
                </td>
              </tr>
              <% }) %>
                <% } %>

        </tbody>
      </table>
    </div>
  </div>
</body>

